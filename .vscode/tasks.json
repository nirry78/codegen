{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "make -s -C output/debug -j14 && make -s -C output/release -j14",
            "problemMatcher": { "base": "$gcc", "fileLocation": "absolute" },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "make -C output clean"
        }
    ]
}